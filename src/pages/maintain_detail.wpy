<template>
    <machinedetails :machine.sync="machineDetail"></machinedetails>
    <view class="title_vw">客户信息</view>
    <view class="line_vw">
        <view class="line_half_vw">
            <text>客户：</text>
            <text>{{machineDetail.machineCustomerName}}</text>
        </view>
        <view class="line_half_vw">
            <text>地址：</text>
            <text>{{machineDetail.customerAddressInRepairRecord}}</text>
        </view>
    </view>
    <view class="line_vw">
        <view class="line_half_vw">
            <text>联系人：</text>
            <text>{{machineDetail.customerNameInRepairRecord}}</text>
        </view>
        <view class="line_half_vw">
            <text>电话：</text>
            <text>{{machineDetail.customerPhoneInRepairRecord}}</text>
        </view>
    </view>
    <view class="button_view" wx:if="{{isReady}}">
        <button class="single_btn" @tap="bindAcceptOrder" size="mini" type="primary">确认接单</button>
    </view>
    <view wx:else >
        <view class="title_vw">保养详情</view>
        <view>{{machineDetail.installInfo}}</view>
        <view>保养项项：</view>
        <view class="line_vw">
            <text>保养建议：</text>
        </view>
        <textarea @input="bindMaintainSuggestionInput" class="textarea" style="height: 3em" placeholder="输入保养建议"></textarea>
        <view class="line_vw">
            <view class="line_half_vw">
                <text>保养人：</text>
                <text>{{machineDetail.installChargePersonName}}</text>
            </view>
            <view class="line_half_vw">
                <text>保养日期：</text>
                <text>{{machineDetail.installActualTime}}</text>
            </view>
        </view>
        <button class="double_btn" @tap="bindUploadFeedback" size="mini" type="primary">提交</button>
        <button class="double_btn" @tap="bindNavigateBack" size="mini" >返回</button>
    </view>
</template>
<style lang="less">
    .line_vw {
        margin: 20rpx;
        display: flex;
        .line_half_vw {
            width: 50%;
        }
    }
    .textarea {
        width: 100%;
        padding: 20rpx;
        background-color: #fff;
    }
    .title_vw {
        padding: 15rpx;
        font-size: large;
        font-weight: bold;
        background: #EBEBEB;
        color: #000000;
    }
    .button_view {
      margin: 50rpx 10rpx;
    }
    .single_btn {
        margin-left: 25rpx;
        width: 50%;
    }
    .double_btn {
        margin: 25rpx;
    }
</style>
<script>
    /* eslint-disable no-undef */

    import wepy from 'wepy'
    import MachineDetails from '../components/machine_details'
    import api from '@/api/api'
    import {
        MAINTAIN_STATUS_TASK_DOING,
        MAINTAIN_STATUS_ASSIGNED
    } from '@/utils/constant'

    export default class MaintainDetail extends wepy.page {
      config = {
        navigationBarTitleText: '保养详情'
      }
      components = {
        machinedetails: MachineDetails
      }
      data = {
        isReady: false,
        machineDetail: {},
        installCustomerFeedback: {
          customerMark: '',
          customerSuggestion: ''
        },
        maintainSuggestion: ''
      };
      methods = {
        async bindAcceptOrder() {
          this.machineDetail.status = MAINTAIN_STATUS_TASK_DOING
          let acceptOrderJson = await api.updateMaintainRecord({
            query: this.machineDetail
          })
          console.log(acceptOrderJson)
          if (acceptOrderJson.data.code !== 200) {
            wx.showModal({
              title: '接单失败！',
              content: '网络错误',
              showCancel: false,
              confirmColor: '#007aff',
              success: function () {
              }
            })
          } else {
            wepy.showToast({
              title: '接单成功',
              icon: 'success',
              duration: 2000
            })
            wepy.navigateBack()
          }
        },
        bindMaintainSuggestionInput(e) {
          console.log(e.detail.value)
          this.maintainSuggestion = e.detail.value
        },
        async bindUploadFeedback() {
          this.installCustomerFeedback.customerMark = this.index
          this.installCustomerFeedback.customerSuggestion = this.customerSuggestion
          let installCustomerFeedbackJson = JSON.stringify(this.installCustomerFeedback)
          const installFeedbackJson = await api.uploadInstallFeedback({
            query: {
              installCustomerFeedback1: installCustomerFeedbackJson,
              installRecordId: this.machineDetail.id
            }
          })
          console.log('uploadInstallFeedbackJson:')
          console.log(installFeedbackJson)
          console.log(installFeedbackJson.data.code)
          if (installFeedbackJson.data.code === 200) {
            wepy.showToast({
              title: '上传成功',
              icon: 'success',
              duration: 2000
            })
            wepy.navigateBack()
          } else {
            wepy.showToast({
              title: '上传失败',
              icon: 'none',
              duration: 3000
            })
          }
        },
        bindNavigateBack() {
          wepy.navigateBack()
        }
      };

      events = {};

      onLoad(options) {
        console.log(options)
        this.machineDetail = JSON.parse(options.machineDetail)
        console.log(this.machineDetail)
        if (this.machineDetail.maintainStatus === MAINTAIN_STATUS_ASSIGNED) {
          this.isReady = true
        } else {
          this.isReady = false
        }
        this.$apply()
      };
    }
</script>
