<script>
import wepy from 'wepy'
import api from '@/api/api'
import {
    AUTHORIZATION,
    ACCOUNT,
    USER_ID,
    SYSTEM_INFO,
  USER_SPECICAL_INFO,
  USER_INFO
} from '@/utils/constant'
export default class Authorize extends wepy.page {
  config = {
    navigationBarTitleText: '授权登录'
  }
  async onLoad() {
    let jwtAuthorization = 'Bearer eyJhbGciOiJIUzUxMiJ9..qLx0FickQEqtO1-aFGou9ji1oTYq2uScEsk3zNEO-zSWos-4zNpMqeO2BDb-m3QL2mejm64peH-EXsFoR9wRNA'
    wepy.setStorageSync(AUTHORIZATION, jwtAuthorization)
    wepy.setStorageSync(ACCOUNT, 'repairPerson_lisi')
    wepy.setStorageSync(USER_ID, '4')
    let res = await wepy.getSetting()
    console.log(res)
    if ((res.authSetting)['scope.userInfo']) {
      wepy.switchTab({
        url: '/pages/repair'
      })
    }
  }
  async onGotUserInfo(e) {
    if (e.detail.errMsg === 'getUserInfo:ok') {
      let res = await wepy.login()
      console.log(res.code)
      if (res.code) {
        console.log(e.detail.userInfo)
        wepy.setStorageSync(USER_INFO, e.detail.userInfo)
        let systemInfo = wepy.getSystemInfoSync()
        wepy.setStorageSync(SYSTEM_INFO, systemInfo)
        let rlt = await api.wxJsCode2Session({
          query: {
            jsCode: res.code,
            nickName: e.detail.userInfo.nickName
          }
        })
        console.log('get session resoult: ' + rlt.data.result)
        if (rlt.data.result) {
          let data = rlt.data
          if (data.data.openid) {
            wepy.setStorageSync(USER_SPECICAL_INFO, data.data)
            wepy.switchTab({
              url: '/pages/repair'
            })
          }
        } else {
          let res = await wepy.showModal({
            title: 'appid有误',
            content: '授权失败'
          })
          if (res.confirm) {
            wepy.switchTab({
              url: '/pages/repair'
            })
          }
        }
      }
    }
  }
  methods = {

  }
  events = {

  }
}

</script>
